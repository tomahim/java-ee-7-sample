<?xml version="1.0" encoding="UTF-8"?>
<policy>
    <application-policy name="testDB">
        <authentication>
            <login-module code="org.jboss.security.auth.spi.DatabaseServerLoginModule"
                             flag="required">
                <module-option name="dsJndiName">java:jboss/datasources/MySQLDS</module-option>
                <module-option name="principalsQuery">
                    select passwd from USERS username where username=?</module-option>
                <module-option name="rolesQuery">
                    select userRoles, 'Roles' from USER_ROLES where username=?</module-option>
            </login-module>
        </authentication>
    </application-policy>
</policy>